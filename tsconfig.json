{
    "compilerOptions": {
        "outDir": "dist/js", //Apontar aonde vai o js depois de compilar
        "target": "ES6", //Versão do ecmascript
        "noEmitOnError": true, //Não vai gerar o js se o ts tiver erros de compilação
        "noImplicitAny": true, //Não permite que as variaveis e as propriedades sejam any
        "removeComments": true, //Remover os comentários na pasta dist
        "strictNullChecks": true, //Verifica se as variáveis podem ser nulas
        "experimentalDecorators": true //Ativa o uso de decorators na aplicação
    },
    "include": [
        "app/**/*" //Apontar aonde estão os arquivos ts
    ]
}